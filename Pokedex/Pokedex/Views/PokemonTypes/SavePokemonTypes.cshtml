@model Pokedex.core.Application.ViewModel.SavePokemonTypeViewModel;
@{
    ViewData["Title"] = "Save Pokemons Types";
}


<div class="col-6 offset-3">
    <div class="card bg-black text-white">
        <form method="post" class="saveTypeForm">
            <div class="card-body">

                <input type="hidden" asp-for="id" class="IDSave" />

                <div class="mb-3">
                    <label class="form-label" asp-for="typeName">Pokemon Name:</label>
                    <input class="form-control" asp-for="typeName" type="text" />
                    <span asp-validation-for="typeName" class="text-danger"></span>
                </div>
                
            </div>
            <div class="card-footer">
                <button class="btn btn-outline-success">Save</button>
                <a class="btn btn-outline-info" asp-controller="PokemonTypes" asp-action="Index">Go back</a>
            </div>
        </form>
    </div>
</div>
