@model Aplication.ViewModel.FormViewModel


<div class="row">

    <div class="col-12 col-md-6 offset-md-3 mt-5"></div>
    <form method="post" asp-controller="Zodiac" asp-action="Index">
        <div class="mb-3">
            <label asp-for="name" class="form-label">Name: </label>
            <input asp-for="name" class="form-control" type="text" />
        </div>

        <div class="mb-3">
            <label asp-for="birthday" class="form-label">Birthday: </label>
            <input asp-for="birthday" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label asp-for="month" class="form-label">Month: </label>
            <input asp-for="month" class="form-control" type="number" max="12" min="1"/>
        </div>

        <button type="submit" class="btn btn-success">Send</button>
    </form>

</div>